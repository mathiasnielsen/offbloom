<?xml version="1.0" encoding="utf-8" ?>
<local:MainPageBase 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OffBloom.Client.Features"
    x:Class="OffBloom.Client.Features.MainPage"
    Title="off bloom"
